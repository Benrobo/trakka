datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id      String      @id @unique
  email   String   @unique
  name    String
  hash String
  refreshToken String?
}

model Collections {
  id        String   @id
  title     String 
  color   String?
  userId  String
  createdAt DateTime @default(now())
}

model Tasks {
  id       String @id
  collectionId    String
  userId String  
  title String  
  description String  
  completed Boolean

  // @@id([id, collectionId])
}
